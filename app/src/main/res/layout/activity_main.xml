<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="Bill Amount" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/label1"
        android:layout_marginTop="85dp"
        android:text="Percent" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/label1"
        android:layout_marginTop="131dp"
        android:text="Tip" />

    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/label1"
        android:layout_marginTop="169dp"
        android:text="Total" />

    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tipTextView"
        android:layout_alignTop="@+id/label2" />

    <SeekBar
        android:id="@+id/percentSeekBar"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/billAmountEditText"
        android:layout_alignTop="@+id/label2" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/billAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>